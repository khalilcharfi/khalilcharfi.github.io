<section id="education-section" style="margin-top: 2.5rem;">
    <h2>{{t.education.title}}</h2>
    
    {{#each t.education.items}}
    <article>
        <h3 style="font-size: 1.15rem; margin-bottom: 0.5rem;">{{this.degree}}</h3>
        <p style="color: var(--accent-color); font-weight: 500;">
            {{this.institution}} | {{this.location}}
        </p>
        <p style="color: var(--secondary-text);"><em>{{this.date}}</em></p>
        <p>{{this.description}}</p>
    </article>
    {{/each}}
</section>
