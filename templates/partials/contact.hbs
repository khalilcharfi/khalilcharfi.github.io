<section id="contact-section" style="margin-top: 2.5rem;">
    <h2>{{t.contact.title}}</h2>
    <p style="margin-bottom: 1.5rem;">
        {{t.contact.description}}
    </p>
    
    <!-- HTML5 Native Contact Links -->
    <nav class="contact-links" aria-label="Social Media Links">
        <a href="{{profile.linkedin}}" 
           target="_blank" 
           rel="noopener noreferrer"
           itemprop="sameAs"
           aria-label="Connect with {{profile.name}} on LinkedIn">
            {{t.contact.linkedin}}
        </a>
        <a href="{{profile.github}}" 
           target="_blank" 
           rel="noopener noreferrer"
           itemprop="sameAs"
           aria-label="View {{profile.name}}'s projects on GitHub">
            {{t.contact.github}}
        </a>
    </nav>
    
    <!-- HTML5 Definition List for Contact Info -->
    <dl style="margin-top: 1.5rem; padding: 1rem; background: rgba(128, 128, 128, 0.1); border-radius: 8px;">
        <dt style="display: inline; font-weight: bold;">📧 Email:</dt>
        <dd style="display: inline; margin: 0;">{{profile.email}}</dd><br>
        
        <dt style="display: inline; font-weight: bold;">📍 Location:</dt>
        <dd style="display: inline; margin: 0;">{{profile.location}}</dd><br>
        
        <dt style="display: inline; font-weight: bold;">💼 Status:</dt>
        <dd style="display: inline; margin: 0;">Open to opportunities</dd><br>
        
        <dt style="display: inline; font-weight: bold;">🌐 Work Authorization:</dt>
        <dd style="display: inline; margin: 0;">EU Work Permit</dd>
    </dl>
</section>
