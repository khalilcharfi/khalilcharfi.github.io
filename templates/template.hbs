<!DOCTYPE html>
<html lang="{{lang}}">
   <head>
      <title>{{meta.title}}</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no,viewport-fit=cover,minimum-scale=1,maximum-scale=1,user-scalable=no">
      <meta http-equiv="x-ua-compatible" content="ie=edge">
      <meta name="renderer" content="webkit">
      <meta name="layoutmode" content="standard">
      <meta name="imagemode" content="force">
      <meta name="wap-font-scale" content="no">
      <meta name="format-detection" content="telephone=no">
      
      <!-- Primary Meta Tags -->
      <meta name="description" content="{{meta.description}}">   
      <meta name="keywords" content="{{meta.keywords}}">
      <meta name="language" content="{{lang}}">
      <meta name="author" content="{{meta.author}}">
      <meta name="robots" content="index, follow">
      <link rel="canonical" href="{{meta.canonical}}">

      <!-- Open Graph / Social Media Tags -->
      <meta property="og:type" content="website">
      <meta property="og:url" content="{{social.og.url}}">
      <meta property="og:title" content="{{meta.title}}">
      <meta property="og:description" content="{{meta.description}}">
      <meta property="og:image:type" content="{{social.og.image.type}}">
      <meta property="og:image:width" content="{{social.og.image.width}}">
      <meta property="og:image:height" content="{{social.og.image.height}}">
      <meta property="og:image" content="{{social.og.image.url}}">
      <meta property="og:locale" content="{{meta.locale}}">
      
      <!-- Twitter Card Tags -->
      <meta name="twitter:card" content="{{social.twitter.card}}">
      <meta name="twitter:url" content="{{social.og.url}}">
      <meta name="twitter:title" content="{{meta.title}}">
      <meta name="twitter:description" content="{{meta.description}}">
      <meta name="twitter:image:type" content="{{social.og.image.type}}">
      <meta name="twitter:image:width" content="{{social.og.image.width}}">
      <meta name="twitter:image:height" content="{{social.og.image.height}}">
      <meta name="twitter:image" content="{{social.og.image.url}}">

      <!-- Favicons -->
      <link rel="apple-touch-icon" sizes="180x180" href="../img/favicons/apple-touch-icon.png">
      <link rel="icon" type="image/png" sizes="32x32" href="../img/favicons/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="../img/favicons/favicon-16x16.png">
      <link rel="manifest" href="../img/favicons/site.webmanifest">
      <link rel="mask-icon" href="../img/favicons/safari-pinned-tab.svg" color="#5bbad5">
      <meta name="msapplication-TileColor" content="#da532c">
      <meta name="theme-color" content="#101218">

      <!-- Stylesheets -->
      <link rel="stylesheet" href="../css/style.css">
      
      <!-- Language Alternates -->
      {{#each meta.alternates}}
      <link rel="alternate" href="{{url}}" hreflang="{{lang}}">
      {{/each}}
      <link rel="alternate" href="{{meta.defaultUrl}}" hreflang="x-default">

      <!-- JSON-LD Structured Data -->
      <script type="application/ld+json">
        {{toJSON jsonLd}}
      </script>
   </head>
   <body>
      <div id="root">
         <div class="container">
            <main class="content">
               <div>
                <section class="profile">
                  <h1 class="slogan">{{profile.name}}</h1>
                  <p class="describe">{{profile.title}}</p>
                  <div class="button">
                    {{#each profile.social}}
                    <a href="{{url}}" target="_blank" rel="noopener" aria-label="{{platform}} Profile" class="social-btn">
                      {{{icon}}}
                    </a>
                    {{/each}}
                  </div>
                </section>
               </div>
            </main>
         </div>
      </div>
   </body>
</html>